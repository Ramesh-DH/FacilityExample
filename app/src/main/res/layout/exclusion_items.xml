<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="exclusion"
            type="com.example.facilityexample.model.Exclusion" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/efidTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facility ID :"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/efid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="6dp"
                android:text="@{String.valueOf(exclusion.facilityId)}"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eOptIdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Options Id :"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/eOptId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="6dp"
                android:text="@{String.valueOf(exclusion.optionsId)}"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</layout>
