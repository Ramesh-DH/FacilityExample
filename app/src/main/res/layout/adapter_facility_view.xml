<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="options" type="com.example.facilityexample.model.Option"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/liniearLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:text="@{options.name}" />

        <TextView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:drawableRight="@drawable/abc_vector_test"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:text="@{options.icon}" />

        <TextView
            android:id="@+id/propertyId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:text="@{String.valueOf(options.id)}" />

    </LinearLayout>
</layout>
